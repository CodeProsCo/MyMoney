@using Cassette.Stylesheets
@model MyMoney.ViewModels.Authentication.User.LoginViewModel

@{
    ViewBag.Title = MyMoney.Resources.Authentication.Title_SignIn;
    Layout = "~/Views/Shared/_PlainLayout.cshtml";

    Bundles.Reference<StylesheetBundle>("~/Areas/Authentication/Content/user.css");
}

<div class="login-container">
    <div class="ui middle aligned center aligned grid">
        <div class="column">
            <div class="ui large form">
                @using (Html.BeginForm("Login", "User", FormMethod.Post, new { id = "log-in-form" }))
                {
                    <div class="ui stacked segment">
                        <h2 class="ui block header">
                            <i class="sign in icon"></i> @MyMoney.Resources.Authentication.Title_SignIn
                        </h2>

                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(x => x.ReturnUrl)
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="at icon"></i>
                                @Html.TextBoxFor(m => m.EmailAddress, new { placeholder = "Email Address" })
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="lock icon"></i>
                                @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
                            </div>

                        </div>
                        <div class="ui fluid large blue submit button" id="log-in">
                            <i class="ui sign in icon"></i>
                            @MyMoney.Resources.Authentication.Title_SignIn
                        </div>
                    </div>
                }
                @Html.ValidationSummary(true)
            </div>
            <div class="ui message">
                @MyMoney.Resources.Authentication.Message_NewUser <a href="@Url.Action("Register", "User")">@MyMoney.Resources.Authentication.Message_Here</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">

        $("#log-in")
            .click(function(e) {
                e.stopPropagation();

                if ($("#log-in-form").valid()) {
                    $("#log-in-form").submit();
                }
            });
    </script>
}