@using MyMoney.Resources
@model MyMoney.ViewModels.Saving.Goal.GoalViewModel
<div class="item" data-goal-id="@Model.Id">
    <div class="content">
        <span class="header">@Model.Name</span>
        @if (!Model.Complete)
        {
            <div class="ui right floated yellow icon button"
                 data-inverted
                 data-tooltip="@Goal.Tooltip_Edit"
                 data-edit
                 data-get="@Url.Action("Get", "Goal", new {goalId = Model.Id})">
                <i class="pencil icon"></i>
            </div>
        }

        <div class="meta">
            @Model.StartDate.ToShortDateString()

            @if (Model.EndDate.HasValue)
            {
                @("- ")
                @Model.EndDate.Value.ToShortDateString()
            }
        </div>
        <div class="description">
            <div class="ui  progress @(Model.Complete ? "success" : "indicating")" data-percent="@Model.Amount">
                <div class="bar">
                    <div class="progress"></div>
                </div>
            </div>
        </div>
    </div>
</div>

