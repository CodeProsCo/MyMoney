@model MyMoney.ViewModels.Spending.Bill.BillViewModel
@{
    var categoryOptions = (SelectList)ViewData["CategoryOptions"];
    var periodOptions = (SelectList)ViewData["TimePeriodOptions"];
}
<div class="ui form">
    @Html.HiddenFor(x => x.Id)
    @Html.EditorFor(x => x.Name)
    <div class="two fields">
        @Html.EditorFor(x => x.Amount)
        @Html.EditorFor(x => x.Category, new { options = categoryOptions })
    </div>
    <div class="two fields">
        @Html.EditorFor(x => x.StartDate)
        @Html.EditorFor(x => x.ReoccurringPeriod, new { options = periodOptions })
    </div>
</div>