@model MyMoney.ViewModels.Spending.Bills.AddBillViewModel
@{
}
<div class="ui form">
    @Html.EditorFor(x => x.Name)
    <div class="two fields">
        @Html.EditorFor(x => x.Amount)
        @Html.EditorFor(x => x.Category, new { options = Model.CategoryOptions })
    </div>
