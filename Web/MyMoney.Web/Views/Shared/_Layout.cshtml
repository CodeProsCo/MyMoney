@using System.Globalization
@using Cassette.Scripts
@using Cassette.Stylesheets
@{
    Bundles.Reference<StylesheetBundle>("~/Content/Site");
    Bundles.Reference<StylesheetBundle>("~/Content/Semantic");
    Bundles.Reference<StylesheetBundle>("~/Content/Toastr");
    Bundles.Reference<StylesheetBundle>("~/Content/Intro");

    Bundles.Reference<ScriptBundle>("~/Scripts/Semantic");
    Bundles.Reference<ScriptBundle>("~/Scripts/Common");
}

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentCulture.TwoLetterISOLanguageName">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - MyMoney</title>
    @Bundles.RenderStylesheets()
</head>
<body>
    @{ Html.RenderPartial("_SideBar"); }

    <div class="pusher">
        @{ Html.RenderPartial("_Navigation"); }
        <div class="ui container">
            @RenderBody()
        </div>
    </div>


    <div id="modal-container">
        @RenderSection("Modals", false)
    </div>

    <div id="script-container">
        @Bundles.RenderScripts()
        @RenderSection("Scripts", false)
        <script type="text/javascript">
            initializeGlobalObject();
        </script>
    </div>
</body>
</html>