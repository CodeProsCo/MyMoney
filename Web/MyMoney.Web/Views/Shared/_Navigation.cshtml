<div class="ui menu mainmenu">
    <div class="item" id="menu-toggle" data-hint="Click here to open the menu" data-hintposition="top-middle">
        <i class="block layout icon"></i>
    </div>

    <div class="left item search-bar">
        <div class="ui icon input">
            <input type="text" placeholder="Search...">
            <i class="search icon"></i>
        </div>
    </div>
    <div class="right item nav-item">
        <div class="ui pointing dropdown user-dropdown">
            <div class="text">
                @User.Identity.Name
            </div>
            <i class="dropdown icon"></i>
            <div class="menu">
                <a class="item" href="@Url.Action("Logout", "User", new { area = "Authentication" })">
                    <i class="sign out icon"></i>
                    Sign out
                </a>
                <a class="item" id="show-hints">
                    <i class="comments icon"></i>
                    Show hints
                </a>
            </div>
        </div>
    </div>


</div>